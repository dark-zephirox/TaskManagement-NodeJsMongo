<div class="container">
  <div class="row">
    <div class="col-md-5 offset-md-3">
      <div class="card card-body p-4 rounded-0 bg-dark text-white rounded-0">
        <form action="/task/{{task._id}}/edit" method="post">
          <h3>Update a Task</h3>
          <div class="mb-3">
            <input type="text" name="title" placeholder="Title" value="{{task.title}}"
            class="form-control rounded-0 text-white bg-dark" />
          </div>
          <div class="mb-3">
            <textarea name="description" rows="3" placeholder="Add a Description"
            class="form-control rounded-0 text-white bg-dark" />
            {{task.description}}
          </textarea>
          </div>
          <button class="btn btn-primary">Update</button>
        </form>
      </div>
    </div>
  </div>
</div>